<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream"
    android:orientation="vertical"

   >

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="fruits"
    android:textStyle="bold"
    android:gravity="center"
    android:textSize="30sp"
    android:padding="10dp"
    />
    <GridLayout

        android:columnCount="2"
        android:rowCount="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/apple"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_columnWeight="1"
        android:src="@mipmap/apple1"
         android:layout_margin="10dp"
        android:padding="10dp"
        android:scaleType="centerCrop"
        />

    <ImageView
        android:id="@+id/watermelon"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_columnWeight="1"
        android:src="@mipmap/watermelon"
        android:scaleType="centerCrop"
        android:layout_margin="10dp"
        android:padding="5dp"/>

    <ImageView
        android:id="@+id/cherry"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_columnWeight="1"
        android:src="@mipmap/cherry"
        android:scaleType="centerCrop"
        android:layout_margin="10dp"
        android:padding="5dp"/>

    <ImageView
        android:id="@+id/strawberry"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_columnWeight="1"
        android:src="@mipmap/strawberry"
        android:scaleType="centerCrop"
        android:layout_margin="10dp"
        android:padding="5dp"/>
        <ImageView
            android:id="@+id/grapes"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_columnWeight="1"
            android:src="@mipmap/grapes"
            android:scaleType="centerCrop"
            android:layout_margin="10dp"
            android:padding="5dp"/>
        <ImageView
            android:id="@+id/orange"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_columnWeight="1"
            android:src="@mipmap/orange"
            android:scaleType="centerCrop"
            android:layout_margin="10dp"
            android:padding="5dp"/>

</GridLayout>
</LinearLayout>